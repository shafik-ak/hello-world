  "version": "0.2.0",
  "configurations": [
    {
      "name": "cds run",
      "args": ["--", "cds", "run", "--with-mocks", "--in-memory?"],
        //^ the leading "--" arg ensures it works with and without debugging
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["-n"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ]
}
